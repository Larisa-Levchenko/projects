.footer {
    font-size: 14px;
    padding: 130px 0 170px 0;
    background: #2B2D3A;

    &__info {
        display: flex;
        flex-direction: column;

        .footer__item {
            max-width: 200px;
        }
    }

    &__copyright {
        display: flex;
        flex-direction: column;
        max-width: 300px;
    }

    &__nav {
        display: grid;
        grid-auto-flow: column;
        grid-template-rows: repeat(3, 1fr);
        row-gap: 20px;
        column-gap: 80px;
    }

    &__item {
        color: var(--color-font-main);
        line-height: 22px;
        width: 100%;
    }

    &__logo {
        margin-bottom: 14px;
    }
}

@media (max-width: 1270px) {
    .footer {
        padding: 80px 0 60px 0;

        &__copyright {
            flex-basis: 100%;
            max-width: none;
            align-items: center;
            margin-top: 40px;

            .footer__item {
                text-align: center;
            }
        }

        &__item {
            width: fit-content;
        }
    }
}

@media (max-width: 850px) {
    .footer {
        padding: 30px 0;

        &__nav {
            margin: 0 auto;
            column-gap: 40px;
        }

        &__info {
            flex-basis: 100%;
            align-items: center;
            margin-bottom: 40px;

            .footer__item {
                text-align: center;
            }
        }
    }
}