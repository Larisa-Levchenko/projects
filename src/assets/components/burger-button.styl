.burger-button {
	width 27px
	height 27px
	overflow hidden
    position relative

    &__item {
        width 27px
        height 4px
        position absolute
        top 50%
        left 50%
        border-radius 3px
        transform translate(-50%, -50%)
        background-color var(--color-font-main)
        transition all 0.3s ease-in-out

        &:nth-of-type(2) {
            top calc(50% - 9px)
        }

        &:nth-of-type(3) {
            top calc(50% + 9px)
        }
    }
}

.burger-button.burger-button_active {
    .burger-button__item {
         &:nth-of-type(1) {
             display none
         }

          &:nth-of-type(2) {
            top 50%
            transform translate(-50%, 0%) rotate(45deg)
         }

          &:nth-of-type(3) {
            top 50%
            transform translate(-50%, 0%) rotate(-45deg)
         }
    }
}

